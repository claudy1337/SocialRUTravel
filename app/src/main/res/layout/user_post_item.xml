<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="15dp"
        app:cardBackgroundColor="#F7F8F8"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagePost"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                android:src="@drawable/backround_image2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userName_txt"
                android:elevation="10dp"
                android:layout_marginTop="15dp"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aboba Aboba"
                app:layout_constraintStart_toStartOf="@+id/imagePost"
                app:layout_constraintTop_toBottomOf="@+id/imagePost"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/userLogin_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/login_user"
                android:textSize="14dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/userName_txt"
                app:layout_constraintStart_toEndOf="@+id/userName_txt"
                app:layout_constraintTop_toTopOf="@+id/userName_txt" />

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:elevation="10dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/title"
                android:textAlignment="textStart"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/userName_txt"
                app:layout_constraintTop_toBottomOf="@+id/userName_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>>

</androidx.constraintlayout.widget.ConstraintLayout>